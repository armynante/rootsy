  <%= render 'layouts/nav' %>


    <!-- header -->
    <header class="content cube_bg">
        <!-- messages -->
        <%= render 'layouts/messages' %>

        <section  class="row">
            <div class="large-6 medium-8  medium-centered columns text-center">
              <h2>Log in</h2>
              <!-- graphic here> -->
              
                
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="row">
                  <div class="small-3 columns">
                    <%= f.label :email, class: "right inline" %>
                  </div>
                  <div class="small-9 columns">
                    <%= f.email_field :email, placeholder:"example@example.com", autofocus: true %>
                  </div>
                </div>
                <div class="row">
                  <div class="small-3 columns">
                    <%= f.label :password, class: "right inline" %>
                  </div>
                  <div class="small-9 columns">
                    <%= f.password_field :password, placeholder:"password", autocomplete: "off" %>
                  </div>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="row">
                    <div class="small-12 columns">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  </div>
                <% end -%>

                <div class="actions row">
                  <%= f.submit "Log in", class: "button radius" %>
                </div>
                <% end %>
              
                <div class="row">
                  <div class="small-12 columns">
                    <%= render "devise/shared/links" %>
                  </div>
                </div>
            </div>
        </section>

    </header>

    <%= render 'layouts/footer' %>

   