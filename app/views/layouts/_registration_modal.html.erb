
    <div id="registration-modal" class="reveal-modal medium radius cube_bg" data-reveal>
      <h2>Register</h2>
      <p class="lead">Lead Paragraph</p>
      <p>secondary messaging paragraph</p>

      <form>
        <div class="centered">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
        <%= devise_error_messages! %>

            <div class="row">
                <div class="small-3 columns">
                  <%= f.label :email, class: "right inline" %>
                </div>
                <div class="small-9 columns">
                  <%= f.email_field :email, class: "", placeholder:"example@example.com", autofocus: true %>
                </div>
            </div>

            <div class="row">
                <div class="small-3 columns">
                    <%= f.label :password, class: "right inline" %>
                </div>
                <div class="small-9 columns">
                    <%= f.password_field :password, autocomplete: "off", class: "", placeholder:"password" %>
                </div>
            </div>
        
            <div class="row">
                <div class="small-3 columns">
                    <%= f.label :password_confirmation, class: "right inline" %>
                </div>
                <div class="small-9 columns">
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "", placeholder:"password" %>
                </div>
            </div>
            
            <div class="row">
                <div class="small-4 columns">
                    <%= link_to "Add Linkedin", "auth/linkedin" %>
                </div>
                <div class="small-4 columns">
                    <%= link_to "Add Facebook", "auth/facebook" %>
                </div>
                <div class="small-4 columns">
                    <%= link_to "Add Google", "auth/google_oauth2" %>
                </div>
            </div>
            <div class="row">
                <%= f.submit "Sign up", class: "button radius clearfix" %>
            </div>

        <% end %>

                
        </div>
    </form>


      <a class="close-reveal-modal">&#215;</a>
    </div>